<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Stop name at top -->
        <TextView
            android:id="@+id/stopTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingBottom="8dp"/>

        <!-- Routes header -->
        <TextView
            android:id="@+id/routesHeaderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routes serving this stop:"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingTop="8dp"/>

        <!-- Scrollable container for your routes list -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/routesListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading routesâ€¦"
                android:lineSpacingExtra="4dp"/>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
